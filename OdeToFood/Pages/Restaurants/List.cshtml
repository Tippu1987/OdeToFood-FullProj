@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="searchTerm" />
            <span class="input-group-sm">
                <button class="btn">
                    <i class="fa fa-search" style="font-size:24px;color:darkorange"></i>
                </button>
            </span>
        </div>
    </div>

</form>

<table class="table">
    <thead>
        <tr>
            <td><strong>Name</strong></td>
            <td><strong>Location</strong></td>
            <td><strong>Cuisine Type</strong></td>
        </tr>
    </thead>
    @foreach (var restaurant in Model.RestaurantList)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.CuisineType</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa fa-search-plus" style="font-size:24px;color:green"></i>
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    <i class="fas fa-edit" style="font-size:24px;color:green"></i>
                </a>
            </td>
        </tr>
    }
</table>
<div>
    @Model.Message
</div>
